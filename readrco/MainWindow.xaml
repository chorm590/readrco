<Window x:Class="readrco.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:readrco"
        mc:Ignorable="d"
        Title="Book read record" Height="600" Width="950" ResizeMode="CanMinimize">  
    <DockPanel Margin="5" >
		<Button DockPanel.Dock="Right" Content="New" Width="80" Height="30" Margin="3, 20, 0, 0" VerticalAlignment="Top" Click="Btn_New_Click" />
		<ListView x:Name="LVList" >
			<ListView.View>
				<GridView>
					<GridViewColumn Header="序号" Width="90">
						<GridViewColumn.CellTemplate>
							<DataTemplate>
								<TextBlock Text="{Binding Path=Sn}" TextAlignment="Center" />
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
					<GridViewColumn Header="书名" Width="250" />
					<GridViewColumn Header="起始日期" Width="160" />
					<GridViewColumn Header="终止日期" Width="160" />
					<GridViewColumn Header="评分" Width="170" />
				</GridView>
			</ListView.View>
		</ListView>

	</DockPanel>
</Window>
